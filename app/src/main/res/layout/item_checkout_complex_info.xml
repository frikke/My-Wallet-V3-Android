<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/small_spacing"
    android:paddingBottom="@dimen/small_spacing">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/complex_item_label"
        style="@style/Text.Standard.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/body"
        android:layout_marginStart="@dimen/small_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="BTC Price" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/complex_item_title"
        style="@style/Text.Standard.14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/very_small_spacing"
        android:layout_marginEnd="@dimen/small_spacing"
        android:textColor="@color/body"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/complex_item_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="£12345.56" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/complex_item_subtitle_ellipsized"
        style="@style/Text.Light.12"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/very_small_spacing"
        android:layout_marginEnd="@dimen/small_spacing"
        android:ellipsize="middle"
        android:gravity="end"
        android:textColor="@color/body"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/complex_item_label"
        app:layout_constraintTop_toBottomOf="@id/complex_item_title"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345.56" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/complex_item_subtitle"
        style="@style/Text.Light.12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/very_small_spacing"
        android:layout_marginEnd="@dimen/small_spacing"
        android:ellipsize="end"
        android:textColor="@color/body"
        tools:visibility="visible"
        android:gravity="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/complex_item_label"
        app:layout_constraintTop_toBottomOf="@id/complex_item_title"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345£12345.56" />
</androidx.constraintlayout.widget.ConstraintLayout>