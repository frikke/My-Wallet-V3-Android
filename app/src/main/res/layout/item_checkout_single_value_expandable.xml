<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/expandable_item_label"
        style="@style/Text.Standard.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0"
        android:layout_marginStart="@dimen/standard_spacing"
        android:layout_marginTop="@dimen/small_spacing"
        android:layout_marginBottom="@dimen/small_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="BTC Price" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_spacing"
        android:rotation="180"
        android:id="@+id/arrow_icon"
        android:paddingStart="@dimen/tiny_spacing"
        android:paddingEnd="@dimen/tiny_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/small_spacing"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_down" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/expandable_item_label"
        android:id="@+id/expandable_item_value"
        style="@style/Text.Standard.14"
        android:layout_marginTop="@dimen/medium_spacing"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/standard_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/small_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Hi there from PoolTogether! Sign this message to prove you have access to this wallet and we’ll log you in. This won’t cost you any Ether.
To stop hackers from using your wallet, here’s a unique message ID they can’t guess: d458fa15-dcab-4d85-a477-004d6febca12"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>