<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="vertical"
    android:fadingEdgeLength="@dimen/very_small_margin"
    android:requiresFadingEdge="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_limits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_wallet_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_exchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_wallet_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_airdrops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
