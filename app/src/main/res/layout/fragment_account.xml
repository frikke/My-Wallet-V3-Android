<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundSecondary"
    android:fadingEdge="vertical"
    android:fadingEdgeLength="@dimen/very_small_spacing"
    android:fillViewport="true"
    android:requiresFadingEdge="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_limits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_wallet_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_display_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_trading_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_exchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_debit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_wallet_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_airdrops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_addresses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.blockchain.componentlib.tablerow.DefaultTableRowView
            android:id="@+id/settings_refer_a_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:id="@+id/settings_refer_a_friend_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.blockchain.componentlib.tablerow.ToggleTableRowView
            android:id="@+id/settings_chart_vibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.blockchain.componentlib.divider.HorizontalDividerView
            android:id="@+id/settings_chart_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
