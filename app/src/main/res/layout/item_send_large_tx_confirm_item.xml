<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/small_spacing"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="@dimen/very_small_spacing"
    android:paddingBottom="@dimen/very_small_spacing">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/confirm_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:button="@drawable/checkbox_selector_blue" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/confirm_details_checkbox_text"
        style="@style/Text.Standard.14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/large_tx_warning"
        android:layout_marginStart="@dimen/very_small_spacing" />
</LinearLayout>