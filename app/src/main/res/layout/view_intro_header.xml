<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_header_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundSecondary"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/intro_header_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="@dimen/standard_spacing"
        android:tint="@color/primary"
        tools:srcCompat="@drawable/cart_on" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/intro_header_title"
        style="@style/Text.Semibold.20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        android:textColor="@color/title"
        tools:text="buy_with_cash" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/intro_header_label"
        style="@style/Text.Light.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_spacing"
        android:layout_marginEnd="@dimen/standard_spacing"
        android:layout_marginBottom="@dimen/small_spacing"
        android:textColor="@color/body"
        tools:text="select_crypto_you_want" />

    <com.blockchain.componentlib.basic.AppDividerView
        android:id="@+id/intro_header_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>
