<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ach_terms"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/small_spacing"
    android:paddingVertical="@dimen/small_spacing"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/info_text"
        style="@style/Text.Light.12"
        android:layout_width="match_parent"
        android:textColor="@color/body"
        android:layout_height="wrap_content"
        android:gravity="start"
        tools:text="@tools:sample/lorem" />

    <com.blockchain.componentlib.button.MinimalPrimarySmallButtonView
        android:id="@+id/cta_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/minuscule_spacing"
        android:text="@string/coinview_expandable_button" />

</androidx.appcompat.widget.LinearLayoutCompat>