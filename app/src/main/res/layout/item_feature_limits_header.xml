<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundSecondary"
    android:padding="@dimen/standard_spacing">

    <TextView
        android:id="@+id/text_title"
        style="@style/Text.Semibold.16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Upgrade to Gold Limits" />

    <TextView
        android:id="@+id/text_description"
        style="@style/Text.Standard.14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/body"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        tools:text="Verify your ID and link your bank to Buy &amp; Sell Crypto straight from your wallet." />

    <com.blockchain.componentlib.button.PrimaryButtonView
        android:id="@+id/btn_cta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/small_spacing"
        android:layout_marginEnd="0dp"
        app:layout_constraintTop_toBottomOf="@id/text_description" />

</androidx.constraintlayout.widget.ConstraintLayout>