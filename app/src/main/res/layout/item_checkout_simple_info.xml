<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/small_spacing"
    android:paddingBottom="@dimen/small_spacing">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/simple_item_label"
        style="@style/Text.Standard.14"
        android:layout_marginStart="@dimen/standard_spacing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/simple_item_title"
        tools:text="BTC Price" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/simple_item_title"
        style="@style/Text.Standard.14"
        android:layout_width="0dp"
        android:gravity="end"
        android:layout_marginEnd="@dimen/standard_spacing"
        android:layout_marginStart="@dimen/very_small_spacing"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/simple_item_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Â£12345.56" />

</androidx.constraintlayout.widget.ConstraintLayout>