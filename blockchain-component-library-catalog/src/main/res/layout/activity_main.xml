<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base"
            android:textAppearance="@style/TextAppearance.Blockchain.Title2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colors"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/typography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Typography"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/spacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spacing"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primitives"
            android:textAppearance="@style/TextAppearance.Blockchain.Title2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texts"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/expandables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expandables"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Images"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/async_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Async Media"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dividers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dividers"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/primary_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary Button"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/alert_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alert Button"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/small_secondary_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Small Secondary Button"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Controls"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/section_switchers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switchers"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navigation"
            android:textAppearance="@style/TextAppearance.Blockchain.Title2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/top_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navigation Bar"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pager"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input"
            android:textAppearance="@style/TextAppearance.Blockchain.Title2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text Input"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alerts"
            android:textAppearance="@style/TextAppearance.Blockchain.Title2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/card_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Alert"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System"
            android:textAppearance="@style/TextAppearance.Blockchain.Title2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progress"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/snackbars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Snackbars"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cards"
            android:textAppearance="@style/TextAppearance.Blockchain.Title2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cards"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charts"
            android:textAppearance="@style/TextAppearance.Blockchain.Title2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/charts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charts"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Showkase"
            android:textAppearance="@style/TextAppearance.Blockchain.Title2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/showkase_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch showkase"
            android:textAllCaps="false" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>
